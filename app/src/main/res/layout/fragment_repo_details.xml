<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_repo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        tools:text="Repo Id: $id" />

    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        tools:text="Repo Name: $name" />

    <TextView
        android:id="@+id/tv_repo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        tools:text="Repo description: $description" />

    <TextView
        android:id="@+id/tv_repo_updated_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        tools:text="Repo updated at: $updated_at" />

    <TextView
        android:id="@+id/tv_repo_stargazers_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        tools:text="Repo stargazers: $stargazers_count" />

    <TextView
        android:id="@+id/tv_repo_forks_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        tools:text="Repo forks: $forks" />

</LinearLayout>


